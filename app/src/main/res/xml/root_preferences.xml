<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"

    >


    <PreferenceCategory app:title="Configuración">

<ListPreference
        app:key="tamaño"
        app:title="Tamaño de Letra"
        app:defaultValue="16"
        app:entries="@array/text_size_options"
        app:entryValues="@array/text_size_values"
        app:dialogTitle="Elija un tamaño"
    />



        <SwitchPreferenceCompat
            app:key="show_chords_switch"
            app:title="Mostrar/Ocultar Acordes" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Actualizar">

        <Preference
            app:key="check_updates"
            app:title = "Buscar Actualizaciones"
            app:summary="Versión Actual: (@string/app_version)"
        />
            >

    </PreferenceCategory>

    <PreferenceCategory app:title="Sugerencias">

        <Preference
            app:key="sug_song"
            app:title = "Sugerir una Canción" />

        <Preference
            app:key="sug_ideas"
            app:title = "Sugerir Ideas" />

    </PreferenceCategory>

    <PreferenceCategory app:title ="Acerca de">

        <Preference
            app:key="who_weare"
            app:title = "Quiénes somos"
            />

        <Preference
            app:key="suggestions"
            app:title = "Sugerencias"
            app:summary="Quiéres sugerir "
            />
        >

    </PreferenceCategory>

</PreferenceScreen>