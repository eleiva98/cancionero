<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PreferenceTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="tabTextColor">@color/white</item>
        <item name="preferenceCategoryTitleTextColor">@color/blue</item> <!-- Azul -->

        <item name="actionBarStyle">@style/ActionBarStyle</item>

        <!-- Para el texto de las preferencias-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>


    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>